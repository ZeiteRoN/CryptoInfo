<Application
    StartupUri="MainView.xaml"
    x:Class="CryptoInfo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:commands="clr-namespace:CryptoInfo.MVVM.Commands"
    xmlns:local="clr-namespace:CryptoInfo"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />
                <ResourceDictionary Source="Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="Resources/Designs/SearchButtonDesign.xaml" />
                <ResourceDictionary Source="Resources/Designs/BackButtonDesign.xaml" />
                <ResourceDictionary Source="Resources/Designs/ButtonBorderDesign.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <commands:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
